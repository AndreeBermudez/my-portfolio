---
import { featuredProjects } from '@/data/projects';
import ProjectCard from '../shared/ProjectCard.astro';
---

<section
	class='max-w-6xl min-h-screen px-6 md:px-10 lg:px-14 pt-20 md:pt-32 mx-auto pb-12 space-y-4 flex flex-col items-center'
	id='projects'>
	<div class='flex flex-col w-full h-full gap-12 justify-center items-center'>
		<!-- Título con animación -->
		<div class='text-white text-4xl md:text-6xl font-normal w-full relative group pb-4'>
			<h2 class='group-hover:text-purple-400 transition-colors duration-300'>Projects</h2>
			<div
				class='absolute -bottom-2 left-0 w-24 h-1 bg-gradient-to-r from-purple-500 to-purple-300
                rounded-full transition-all duration-500 group-hover:w-32 group-hover:from-purple-600
                group-hover:to-purple-400'>
			</div>
		</div>

		<!-- Grid de proyectos -->
		<div class='grid grid-cols-1 gap-12 md:gap-10 lg:gap-8'>
			{
				featuredProjects.map((project, index) => (
					<div style={`animation-delay: ${index * 150}ms`} class='animate-fade-up'>
						<ProjectCard
							title={project.title}
							description={project.description}
							image={project.image}
							tags={project.technologies}
							repoLink={project.github}
							liveLink={project.live}
						/>
					</div>
				))
			}
		</div>
	</div>
</section>

<style>
	@keyframes fade-up {
		0% {
			opacity: 0;
			transform: translateY(20px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}
	.animate-fade-up {
		animation: fade-up 0.5s ease-out forwards;
		opacity: 0;
	}
</style>
