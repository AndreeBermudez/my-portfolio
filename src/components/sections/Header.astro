---
import { Icon } from 'astro-icon/components';
import Slider from '../shared/Slider.astro';
import Button from '../ui/Button.astro';
---

<header id='hero' class='max-w-6xl h-screen px-6 md:px-10 lg:px-14 pt-28 lg:pt-36 mx-auto flex flex-col items-center justify-evenly overflow-hidden'>
	<div class='flex flex-col space-y-6'>
		<div class='text-white/50 text-base md:text-lg w-full'>Hi, I'm Andreé Bermúdez</div>
		<div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4'>
			<div class='lg:col-span-1 text-white text-5xl md:text-6xl font-normal'>Web Developer</div>
			<div class='lg:col-span-2 text-white/50 text-[clamp(1rem,3vw,1.5rem)]'>
				Contributing to creating <span class='relative text-gradient overflow-hidden'>web experiences</span> that connect
				with people, paying attention to every detail to build clear and pleasant websites.
			</div>
		</div>
		<div class='flex items-center gap-4 md:gap-2 py-2 w-full mt-4'>
			<Button icon='GitHub_dark' href='https://github.com/AndreeBermudez/' />
			<Button icon='linkedin' href='https://www.linkedin.com/in/andree-berm%C3%BAdez-porras-1b0954328/' />
			<Button icon='gmail' href='https://mail.google.com/mail/?view=cm&fs=1&to=andreebermudez1408@gmail.com' />
		</div>
	</div>
	<Slider />
	<a
		href='#about'
		class='absolute bottom-6 text-3xl animate-bounce p-1 rounded-full transition-colors hover:bg-white/10'>
		<Icon name={'down'} />
	</a>
</header>

<style>
	.text-gradient {
		background: linear-gradient(
			90deg,
			rgba(244, 114, 182, 0.8) 0%,
			rgba(255, 255, 255, 0.8) 50%,
			rgba(244, 114, 182, 0.8) 100%
		);
		background-size: 200% auto;
		color: transparent;
		-webkit-background-clip: text;
		background-clip: text;
		animation: shine-text 8s linear infinite;
	}

	@keyframes shine-text {
		0% {
			background-position: 0% 0;
		}
		100% {
			background-position: 200% 0;
		}
	}
</style>
