---
import ExperienceCard from '../shared/ExperienceCard.astro';
import type { Experience } from '@/data/experiences';
import { experiences } from '@/data/experiences';
---

<section class='max-w-6xl min-h-screen px-6 md:px-10 lg:px-14 pt-20 md:pt-32 mx-auto pb-12 space-y-4 flex flex-col items-center' id='experience'>
	<div class='flex flex-col w-full h-full gap-12 justify-center items-center'>
		<!-- Título con animación -->
		<div class='text-white text-4xl md:text-6xl font-normal w-full pb-4 relative group'>
			<h2 class='group-hover:text-purple-400 transition-colors duration-300'>Experience</h2>
			<div
				class='absolute -bottom-3 left-0 w-24 h-1 bg-gradient-to-r from-purple-500 to-purple-300
                rounded-full transition-all duration-500 group-hover:w-32 group-hover:from-purple-600
                group-hover:to-purple-400'>
			</div>
		</div>

		<!-- Grid de proyectos -->
		<div class='relative'>
			<div
				class='absolute left-2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-violet-700 via-violet-300 to-transparent hidden lg:block'>
			</div>
			<div class='flex flex-col space-y-8 lg:space-y-4 lg:ml-10'>
				{experiences.map((exp: Experience, idx) => (
                    <ExperienceCard
                        title={exp.title}
                        company={exp.company}
                        current={exp.current}
                        date={exp.date}
                        location={exp.location}
                        description={exp.description}
                        technologies={exp.technologies}
                        achievements={exp.achievements}
                    />
                ))}
			</div>
		</div>
	</div>
</section>

<style>
	@keyframes fade-up {
		0% {
			opacity: 0;
			transform: translateY(20px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}
	.animate-fade-up {
		animation: fade-up 0.5s ease-out forwards;
		opacity: 0;
	}
</style>
