---
interface Props {
    title: string;
    organization: string;
    date: string;
    image: string;
}

const { title, organization, date, image } = Astro.props;
---

<article
    class="group relative bg-[#141414]/20 rounded-xl border border-white/5 overflow-hidden
    hover:border-purple-500/30 transition-all duration-500 
    hover:shadow-[0_0_30px_rgba(161,116,250,0.15)]
    transform perspective-1000 hover:rotate-y-10 hover:-rotate-x-10"
>
    <div class="relative aspect-[4/3] overflow-hidden">
        <img 
            src={image} 
            alt={`Certificado de ${title}`}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent 
            opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
                <h3 class="text-xl font-medium mb-2">{title}</h3>
                <p class="text-sm text-purple-300">{organization}</p>
                <p class="text-xs text-white/60 mt-1">{date}</p>
            </div>
        </div>
    </div>
</article>

<style>
    .rotate-y-10 {
        transform: rotateY(10deg);
    }
    .rotate-x-10 {
        transform: rotateX(10deg);
    }
    .perspective-1000 {
        perspective: 1000px;
    }
</style>