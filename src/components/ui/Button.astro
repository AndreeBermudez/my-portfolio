---
import { Icon } from 'astro-icon/components';

interface Props {
	icon: string;
	href?: string;
}
const { icon, href } = Astro.props;
---

<a
	href={href}
	target="_blank"
	class='group bg-dark border-1 border-gray-500/20 rounded-2xl flex justify-center items-center p-4 hover:bg-[#1e1e1e] transition-colors duration-300'>
	<Icon
		name={icon}
		class='w-7 h-auto text-white/40 group-hover:text-white transition-colors duration-300'
		color='currentColor'
	/>
</a>
